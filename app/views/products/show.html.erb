<h1><%= @product.name %></h1>
<!-- Product details... -->

<% if @product.categories.any? %>
  <h3>Categories:</h3>
  <ul>
    <% @product.categories.each do |category| %>
      <li><%= category.name %></li>
    <% end %>
  </ul>
<% end %>
<%= button_to 'Add to Cart', add_to_cart_product_path(@product), method: :post %>
